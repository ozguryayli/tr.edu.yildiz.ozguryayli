<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <CheckBox
        android:id="@+id/ucheckBoxA"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:text="A)"
        app:layout_constraintBottom_toTopOf="@+id/ucheckBoxB"
        app:layout_constraintEnd_toStartOf="@+id/uanswerA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/utext" />

    <EditText
        android:id="@+id/uanswerC"
        android:layout_width="325dp"
        android:layout_height="65dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="Answer C"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/uanswerD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ucheckBoxC"
        app:layout_constraintTop_toBottomOf="@+id/uanswerB" />

    <EditText
        android:id="@+id/utext"
        android:layout_width="395dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Enter the question"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ucheckBoxA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonupdate"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="169dp"
        android:onClick="update"
        android:text="update questÄ±on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uanswerE" />

    <EditText
        android:id="@+id/uanswerE"
        android:layout_width="325dp"
        android:layout_height="65dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="Answer E"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uanswerD" />

    <CheckBox
        android:id="@+id/ucheckBoxC"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:text="C)"
        app:layout_constraintBottom_toTopOf="@+id/ucheckBoxD"
        app:layout_constraintEnd_toStartOf="@+id/uanswerC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ucheckBoxB" />

    <CheckBox
        android:id="@+id/ucheckBoxD"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:text="D)"
        app:layout_constraintBottom_toTopOf="@+id/ucheckBoxE"
        app:layout_constraintEnd_toStartOf="@+id/uanswerD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ucheckBoxC" />

    <CheckBox
        android:id="@+id/ucheckBoxE"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:text="E)"
        app:layout_constraintEnd_toStartOf="@+id/uanswerE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ucheckBoxD" />

    <CheckBox
        android:id="@+id/ucheckBoxB"
        android:layout_width="50dp"
        android:layout_height="65dp"
        android:layout_marginStart="18dp"
        android:text="B)"
        app:layout_constraintBottom_toTopOf="@+id/ucheckBoxC"
        app:layout_constraintEnd_toStartOf="@+id/uanswerB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ucheckBoxA" />

    <EditText
        android:id="@+id/uanswerB"
        android:layout_width="325dp"
        android:layout_height="65dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="Answer B"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/uanswerC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ucheckBoxB"
        app:layout_constraintTop_toBottomOf="@+id/uanswerA" />

    <EditText
        android:id="@+id/uanswerA"
        android:layout_width="325dp"
        android:layout_height="65dp"
        android:layout_marginEnd="18dp"
        android:ems="10"
        android:hint="Answer A"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/uanswerB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ucheckBoxA"
        app:layout_constraintTop_toBottomOf="@+id/utext" />

    <EditText
        android:id="@+id/uanswerD"
        android:layout_width="325dp"
        android:layout_height="65dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:hint="Answer D"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/uanswerE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ucheckBoxD"
        app:layout_constraintTop_toBottomOf="@+id/uanswerC" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:onClick="attach"
        android:text="Attachment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uanswerE" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="49dp"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/uanswerE" />

</android.support.constraint.ConstraintLayout>